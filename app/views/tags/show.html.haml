#data.content
  .navigation
    = link_to "Dashboard", subscription_path(subscription)

  %h2
    %span.actions== #{link_to_function("Rename", "Tags.rename(#{tag_path(tag_ref).to_json}, #{tag_ref.name.to_json}, #{form_authenticity_token.to_json})")} | #{link_to_function("Delete", "Tags.deleteTag(#{tag_path(tag_ref).to_json}, #{form_authenticity_token.to_json})")}
    == Transactions tagged "#{h(tag_ref.name)}"

  %table.entries
    = render :partial => "events/balance", :locals => { :container => tag_ref }
    = render(@items)
