<tr id="<%= dom_id(event) %>" class="<%= cycle('odd', 'even') %>" onmouseover="Events.onMouseOver(<%= event.id %>)" onmouseout="Events.onMouseOut(<%= event.id %>)">
  <td class="date">
    <div id="<%= dom_id(event, :nubbin) %>" style="display: none" class="nubbin">
      <%= link_to "&#x270e;", edit_event_path(event, :from => current_location) %> |
      <%= link_to_remote "&#x2716;", :url => event_path(event, :from => current_location), :method => :delete, :confirm => "Are you sure you want to delete this event?" %> |
      <%= link_to_remote "&#x24d8;", :url => event_path(event), :method => :get, :before => "Events.expand(#{event.id})", :html => { :class => "zoom" } %>
      <span class="zooming">&#x231b;</span>
      <%= link_to_function "&#x2713;", "Events.collapse(#{event.id})", :class => "zoomed" %>
    </div>
    <%= event.occurred_on.strftime("%Y-%m-%d") %>
  </td>
  <td>
    <%=h event.actor %>
    <% if account_links %>
      <br /><span class="account_links"><%= links_to_accounts_for_event(event) %></span>
    <% end %>
  </td>
  <td class="number"><%= amount > 0 ? format_amount(amount) : "" %></td>
  <td class="negative number"><%= amount < 0 ? format_amount(amount) : "" %></td>
</tr>
