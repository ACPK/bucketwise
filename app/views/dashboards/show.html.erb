<div class="header">
  <h2 id="links">
    Record a new
    <%= link_to_function "expense", "Events.revealExpenseForm()", :id => "expense_link" %>,
    <%= link_to_function "deposit", "Events.revealDepositForm()", :id => "deposit_link" %>, or
    <%= link_to_function "transfer", "Events.revealTransferForm()", :id => "transfer_link" %>
  </h2>
</div>

<div class="transaction form" id="new_event" style="display: none">
  <%= render :partial => "events/form" %>
</div>

<div id="data" class="content">
  <h2>Recent transactions</h2>

  <table class="entries" id="recent_entries">
    <%= render :partial => "events/event", :collection => subscription.events.recent %>
  </table>

  <h2 id="accounts_summary_header"><span class="actions"><%= link_to_function "Add an account", "Accounts.revealForm()" %></span>Accounts summary</h2>
  <div id="new_account" class="form" style="display: none">
    <%= render :partial => "accounts/form" %>
  </div>


  <table id="accounts_summary">
    <%= render :partial => "accounts/account", :collection => subscription.accounts %>
  </table>
</div>
